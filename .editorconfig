; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.twig]
indent_size = 4
insert_final_newline = false

[Makefile]
indent_size = 4
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2

[Vagrantfile]
indent_style = space
indent_size = 2
